" General
set encoding=utf-8
set history=1000
set mouse=a
set shell=/usr/bin/zsh
set autoread

" Behaviour
set confirm
set linebreak
set wrap
set noerrorbells

" UI
set number
set title
set wildmenu
set background=dark
set termguicolors
syntax enable

" Search
set hlsearch
set ignorecase
set incsearch
set smartcase

" Editor
set smartindent
set expandtab
set tabstop=2
set shiftwidth=2
set shiftround
set smarttab